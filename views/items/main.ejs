  <script>
    // 스크롤 이벤트를 감지하여 header의 배경색을 변경하는 함수
    window.addEventListener("scroll", function () {
      const header = document.querySelector("header");

      if (window.scrollY > 50) {
        // 스크롤이 50px 이상일 때
        header.classList.add("scrolled"); // 'scrolled' 클래스 추가
      } else {
        header.classList.remove("scrolled"); // 스크롤이 50px 이하일 때 클래스 제거
      }
    });

    window.onload = function () {
      const imageItems = document.querySelector(".imageItems");
      const images = document.querySelectorAll(".imageItem");
      const totalImages = images.length;
      let currentIndex = 0;

      function moveImages() {
        // 애니메이션을 통해 이미지를 이동
        imageItems.style.transform = `translateX(-${
          (currentIndex % totalImages) * 330 + currentIndex * 10
        }px)`;

        currentIndex++;
        // 1초 후에 다시 이동하도록 타이머 설정
        setTimeout(moveImages, 2000); // 2초마다 한 번씩 이동
      }

      moveImages();
    };
  </script>
